---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="hero">
    <img src="/images/esromgaard_hero.webp" alt="Hero Image" />
  </div>
</Layout>

<style>
  .hero {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
  }

  .hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
</style>
