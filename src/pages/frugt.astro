---
import Layout from "../layouts/Layout.astro";
import FrugtDesktop from "../components/FrugtDesktop.astro";
import FrugtMobile from "../components/FrugtMobile.astro";
---

<Layout>
  <div slot="hero" class="hero">
    <div class="title">
      <h1 class="frugt_title_font">Håndplukket og frisk fra marken</h1>
      <h2 class="frugt_title_font">
        - Jordbær, Asparges, Kartofler, Ærter og Rabarber
      </h2>
    </div>
    <div class="hero-image">
      <img src="/images/frugt_hero.webp" alt="Hero Image" />
    </div>
  </div>

  <!-- INTRO SECTION -->
  <div class="content">
    <section class="intro-section">
      <div class="intro-grid">
        <!-- LEFT SIDE: TEXT CONTENT -->
        <div class="intro-text">
          <h2 class="black-title">Friskere bliver det ikke</h2>

          <p>
            Vi sætter en stor ære i at levere friske jordbær til vores kunder,
            og de jordbær, du køber i gårdsalget, er altid plukket samme morgen.
            Også asparges, ærter, kartofler og rabarber kommer direkte fra
            marken og ud til salgsstederne friske og fulde af smag.
          </p>

          <a href="/gaardsalg" class="green-button">Besøg gårdsalget</a>
        </div>

        <!-- RIGHT SIDE: IMAGE -->
        <div class="intro-image">
          <img
            class="lightbox-target"
            src="/images/kartofel_frugt.webp"
            alt="Kartofel fra Esromgaard"
          />
        </div>
      </div>
    </section>
    <!-- 3 CARDS SECTION -->
    <section class="three-images-section">
      <div>
        <div class="three-images-image">
          <img
            class="lightbox-target"
            src="/images/asparges_frugt.webp"
            alt="billede af asparges"
          />
        </div>
      </div>

      <div>
        <div class="three-images-image">
          <img
            class="lightbox-target"
            src="/images/aerter_3.webp"
            alt="billede af ærter"
          />
        </div>
      </div>

      <div>
        <div class="three-images-image">
          <img
            class="lightbox-target"
            src="/images/rabarber_3.webp"
            alt="billede af rabarber"
          />
        </div>
      </div>
    </section>
    <!-- FRUGT CATEGORIES SECTION -->
    <section class="frugt-desktop">
      <FrugtDesktop />
    </section>
    <section class="frugt-mobile">
      <FrugtMobile />
    </section>
  </div>
</Layout>

<style>
  .frugt-mobile {
    display: none;
  }
  .hero {
    position: relative;
  }
  .hero-image {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    position: relative;
    z-index: 0;
    margin-bottom: 5rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    scale: 1.05;
    object-fit: cover;
    display: block;
  }

  .title {
    position: absolute;
    top: 70%;
    left: 5%;
    text-align: left;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    z-index: 1;

    opacity: 0;
    transform: translateX(-24px);
    animation: title-slide-in 0.5s ease-out forwards;
    animation-delay: 0.2s;
  }

  @keyframes title-slide-in {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .title h1 {
    font-size: clamp(2.2rem, 6vw, 4.5rem);
    line-height: 1;
  }

  .title h2 {
    font-size: clamp(1.2rem, 3vw, 2.2rem);
    line-height: 2;
  }

  .frugt_title_font {
    color: white;
  }

  /* INTRO SECTION */
  .intro-section {
    margin-bottom: 4rem;
  }

  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15%;
    align-items: start;
  }

  .intro-text {
    min-width: 0;
    line-height: var(--line-height-body);
    font-size: var(--font-size-s);
  }

  .intro-text a {
    margin-top: 5rem;
    display: inline-block;
  }

  .intro-image {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    align-self: stretch;
    min-width: 0;
  }

  .intro-image img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* 3 IMAGES SECTION */
  .three-images-section {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 8rem;
  }

  .three-images-image {
    width: 100%;
    aspect-ratio: 5 / 3;
    overflow: hidden;
    border-radius: 20px;
  }

  .three-images-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 900px) {
    .frugt-mobile {
      display: block;
    }
    .frugt-desktop {
      display: none;
    }

    .hero {
      height: 58vh !important;
    }

    .hero-image,
    .hero > img {
      height: 100%;
    }

    .hero-image img,
    .hero img {
      object-position: center;
    }

    .hero .title {
      top: 50%;
      left: 5%;
      right: 5%;
    }

    .three-images-section {
      display: none;
    }

    .intro-image {
      display: none;
    }

    .intro-section {
      margin-top: 1rem;
      margin-bottom: 3rem;
    }

    .intro-grid {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      width: 100%;
    }

    .intro-text {
      font-size: var(--font-size-s);
      line-height: 1.6;
    }

    .intro-text .black-title {
      color: black !important;
    }

    .intro-text h2 {
      font-size: var(--font-size-xl);
      margin-bottom: 0.75rem;
    }

    .intro-text p {
      margin-bottom: 1.25rem;
    }

    .intro-text a {
      margin-top: 1.25rem;
    }
  }
</style>
