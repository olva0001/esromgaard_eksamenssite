<header class="header">
  <a href="/">
    <img
      src="/images/esromgaard_logo.webp"
      alt="Esromgaard Logo"
      class="logo"
    />
  </a>

  <div class="menu">
    <nav class="desktop-nav">
      <ul>
        <li><a href="/frugt">FRUGT OG GRØNT</a></li>
        <li><a href="/salgssteder">SALGSSTEDER</a></li>
        <li><a href="/gaardsalg">GÅRDSALGET</a></li>
        <li><a href="/omgaarden">OM GÅRDEN</a></li>
        <li><a href="/findvej">FIND VEJ</a></li>
        <li><a href="/job">JOB</a></li>
      </ul>
    </nav>
  </div>

  <button class="burger" aria-label="Open menu">☰</button>

  <div class="mobile-menu">
    <div class="mobile-menu-header">
      <img
        class="header-icon"
        src="/images/strawberry_icon.svg"
        alt="strawberry icon"
      />
      <button class="close" aria-label="Close menu">✕</button>
    </div>

    <nav class="mobile-nav">
      <ul>
        <li><a href="/">FORSIDE</a></li>
        <li><a href="/frugt">FRUGT OG GRØNT</a></li>
        <li><a href="/salgssteder">SALGSSTEDER</a></li>
        <li><a href="/gaardsalg">GÅRDSALGET</a></li>
        <li><a href="/omgaarden">OM GÅRDEN</a></li>
        <li><a href="/findvej">FIND VEJ</a></li>
        <li><a href="/job">JOB</a></li>
      </ul>

      <div class="menu-social">
        <p>Følg os på sociale medier</p>
        <div class="icons">
          <a href="https://www.facebook.com/esromgaard/?locale=da_DK">
            <img src="/images/facebook_icon.svg" alt="facebook icon" />
          </a>
          <a href="https://www.instagram.com/esromgaard/?hl=da">
            <img src="/images/instagram_icon.svg" alt="instagram icon" />
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
  html,
  body {
    max-width: 100%;
    overflow-x: hidden;
  }
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.7rem 1.2rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    background: #fff;
  }
  .header > a {
    display: inline-block;
    line-height: 0;
  }
  .logo {
    height: 50px;
    width: auto;
  }
  .menu {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  .desktop-nav ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .desktop-nav a {
    text-decoration: none;
    color: var(--color-header-green);
    font-weight: 500;
    font-size: var(--font-size-s);
    padding-left: 1rem;
    position: relative;
  }
  .desktop-nav a.active::before {
    content: "▶";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-header-green);
    font-size: 0.9rem;
    font-weight: 700;
  }
  .burger,
  .mobile-menu {
    display: none;
  }
  .no-scroll {
    overflow: hidden;
    height: 100vh;
  }

  .header-icon {
    display: none;
  }

  @media (max-width: 900px) {
    .menu {
      display: none !important;
      flex: 0 !important;
      width: 0 !important;
      min-width: 0 !important;
    }

    .header {
      padding: 1rem 1.2rem;
      min-height: 64px;
      overflow: hidden;
    }

    .logo {
      height: 35px !important;
      flex-shrink: 0;
    }

    .burger {
      display: block !important;
      background: none;
      border: none;
      font-size: 2.4rem;
      line-height: 1;
      color: var(--color-header-green);
      cursor: pointer;
      flex-shrink: 0;
      width: 44px;
      margin-left: auto;
      padding: 0;
      text-align: center;
    }

    .mobile-menu {
      display: flex;
      position: fixed;
      top: 0;
      right: -100%;
      width: 85%;
      height: 100vh;
      background: white;
      z-index: 2000;
      flex-direction: column;
      transition: right 0.35s ease;
      box-shadow: -4px 0 10px rgba(0, 0, 0, 0.2);
    }

    .mobile-menu.open {
      right: 0;
    }

    .mobile-menu-header {
      display: flex;
      justify-content: space-between;
      padding: 0.5rem 1rem;
      border-bottom: 1px solid #d9d9d9;
      flex-shrink: 0;
    }

    .header-icon {
      display: inline-block;
      width: 15%;
      height: auto;
    }

    .close {
      background: none;
      border: none;
      font-size: 2rem;
      color: var(--color-header-green);
      cursor: pointer;
    }

    .mobile-nav {
      flex: 1;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }

    .mobile-nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .mobile-nav li {
      border-bottom: 1px solid #dcdcdc;
    }

    .mobile-nav a {
      display: block;
      padding: 1rem 1rem;
      text-decoration: none;
      color: var(--color-header-green);
      font-weight: 500;
      font-size: var(--font-size-s);
    }

    .menu-social {
      text-align: center;
      border-top: 1px solid #e5e5e5;
    }

    .menu-social p {
      margin: 0 0 1rem 0;
    }

    .menu-social .icons {
      display: flex;
      justify-content: center;
    }

    .menu-social .icons img {
      width: 45px;
      margin: 0;
    }
  }
</style>

<script type="module">
  (function () {
    const burger = document.querySelector(".burger");
    const mobileMenu = document.querySelector(".mobile-menu");
    const closeBtn = document.querySelector(".close");
    function openMenu() {
      mobileMenu.classList.add("open");
      document.body.classList.add("no-scroll");
      mobileMenu.setAttribute("aria-hidden", "false");
      const navFirstLink = mobileMenu.querySelector(".mobile-nav a");
      if (navFirstLink) navFirstLink.focus();
    }
    function closeMenu() {
      mobileMenu.classList.remove("open");
      document.body.classList.remove("no-scroll");
      mobileMenu.setAttribute("aria-hidden", "true");
      burger.focus();
    }
    burger && burger.addEventListener("click", openMenu);
    closeBtn && closeBtn.addEventListener("click", closeMenu);
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && mobileMenu.classList.contains("open"))
        closeMenu();
    });
    document.addEventListener("DOMContentLoaded", () => {
      const currentPath = window.location.pathname;
      document.querySelectorAll("nav a").forEach((link) => {
        const href = link.getAttribute("href");
        if (href === currentPath) link.classList.add("active");
        const gaardsalgPages = [
          "/gaardsalg",
          "/halloween",
          "/hjemmelavedevarer",
        ];
        if (gaardsalgPages.includes(currentPath) && href === "/gaardsalg")
          link.classList.add("active");
      });
    });
  })();
</script>
