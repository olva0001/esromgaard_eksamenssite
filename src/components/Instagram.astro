<section class="instagram-section">
  <div class="instagram-outer">
    <div class="instagram-inner">
      <div class="instagram-info">
        <h2>Følg med på Esromgaards marker</h2>
        <p>
          Vil du holde dig opdateret på, hvad der er i sæson, og hvornår der er
          friske råvarer fra vores marker? På Facebook og Instagram deler vi
          løbende nyt om årets høst, aktuelle frugt- og grøntsagsudvalg samt
          praktisk information om vores populære pluk-selv jordbær. Følg os på
          sociale medier, så får du besked, når pluk-selv jordbær åbner igen til
          næste år - og du går aldrig glip af, hvad der spirer og gror på
          Esromgaard.
        </p>
        <p>Find Esromgaard på både Facebook og Instagram</p>

        <div class="instagram-icons">
          <a
            href="https://www.facebook.com/esromgaard/?locale=da_DK"
            target="_blank"
          >
            <img src="/images/facebook_icon.svg" alt="facebook icon" />
          </a>
          <a href="https://www.instagram.com/esromgaard/?hl=da" target="_blank">
            <img src="/images/instagram_icon.svg" alt="instagram icon" />
          </a>
        </div>
      </div>

      <!-- DEFAULT BLOCKED STATE -->
      <div class="instagram-embed">
        <div
          class="instagram-blocked"
          data-instgrm-permalink="https://www.instagram.com/p/DLuFLBgMHn2/"
          data-category="marketing"
        >
          <p>
            Instagram-indhold er deaktiveret, fordi du endnu ikke har accepteret
            <strong>marketing-cookies</strong>.
          </p>
          <button class="enable-instagram">Tillad og indlæs Instagram</button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .instagram-section {
    background-color: #f7f7f7;
    padding: 4rem 0;
  }
  .instagram-inner {
    max-width: 860px;
    margin: auto;
    display: flex;
    gap: 3rem;
    font-size: var(--font-size-s);
  }
  .instagram-info {
    width: 55%;
  }
  .instagram-embed {
    width: 45%;
  }
  .instagram-icons img {
    width: 50px;
    margin-right: 1rem;
  }
  .instagram-blocked {
    padding: 1.5rem;
    border: 2px dashed #ccc;
    border-radius: 12px;
    background: white;
    text-align: center;
  }
  .instagram-blocked button {
    background-color: var(--color-site-green);
    color: white;
    border: none;
    border-radius: 5px;
    padding: 1rem 2rem;
    cursor: pointer;
  }

  @media (max-width: 900px) {
    .instagram-section {
      padding: 2.5rem 1.5rem;
    }

    .instagram-inner {
      flex-direction: column;
      gap: 2rem;
    }

    .instagram-info,
    .instagram-embed {
      width: 100%;
    }

    .instagram-info h2 {
      margin-top: 0;
    }

    .instagram-icons {
      display: flex;
      justify-content: center;
      margin-top: 1.5rem;
    }

    .instagram-icons img {
      width: 44px;
      margin-right: 0.75rem;
    }

    .instagram-blocked {
      padding: 1.5rem;
    }

    .instagram-embed iframe,
    .instagram-embed blockquote {
      max-width: 100% !important;
      width: 100% !important;
    }
  }
</style>

<script type="module">
  function loadInstagramEmbed() {
    document.querySelectorAll("[data-instgrm-permalink]").forEach((el) => {
      const permalink = el.dataset.instgrmPermalink;
      const block = document.createElement("blockquote");
      block.className = "instagram-media";
      block.dataset.instgrmPermalink = permalink;
      el.replaceWith(block);

      if (!document.getElementById("insta-script")) {
        const script = document.createElement("script");
        script.id = "insta-script";
        script.src = "https://www.instagram.com/embed.js";
        script.async = true;
        script.onload = () => window.instgrm?.Embeds?.process();
        document.body.appendChild(script);
      } else {
        window.instgrm?.Embeds?.process();
      }
    });
  }

  // Load if marketing cookies were already accepted
  function checkAndLoad() {
    if (window.CookieConsent?.acceptedCategory("marketing")) {
      loadInstagramEmbed();
    }
  }

  // User clicks the inline “Tillad og indlæs Instagram”
  document.addEventListener("click", (e) => {
    if (e.target.closest(".enable-instagram")) {
      window.CookieConsent.acceptCategory("marketing");
      // wait a tick for CC to update preferences
      setTimeout(checkAndLoad, 30);
    }
  });

  // - Accept All
  // - Save preferences
  // - Restored preferences on page load
  window.addEventListener("cc:acceptAll", () => setTimeout(checkAndLoad, 30));
  window.addEventListener("cc:onConsent", () => setTimeout(checkAndLoad, 30));
  window.addEventListener("cc:onStatusChange", checkAndLoad);

  // Fallback: check once DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    setTimeout(checkAndLoad, 50);
  });
</script>
