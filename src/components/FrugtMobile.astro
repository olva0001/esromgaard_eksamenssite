---
const url = import.meta.env.SUPABASE_URL;
const key = import.meta.env.SUPABASE_API_KEY;

const res = await fetch(`${url}/rest/v1/categories?select=*,variants(*)`, {
  headers: {
    apikey: key,
    Authorization: `Bearer ${key}`,
  },
});

const categories = await res.json();
---

<section class="frugt-mobile">
  <h2 class="mobile-heading">
    Læs om de mange forskellige sorter vi dyrker på Esromgaard
  </h2>

  {
    categories.map((cat) => (
      <div class="category-item">
        <div class="category-box">
          <div class="category-header">
            <div class="category-header-left">
              <img src={cat.image} alt={cat.name} />
              <h3>{cat.name}</h3>
            </div>

            <button
              class="toggle-cat category-box-button"
              data-accordion="category"
              aria-expanded="false"
            >
              Vis udvalget <span class="arrow">▶</span>
            </button>
          </div>
        </div>

        <div class="category-body">
          <div class="category-body-inner">
            <p class="category-description">{cat.description}</p>

            <div class="variants">
              {cat.variants.map((v) => (
                <div class="variant-item">
                  <div class="variant-header">
                    <div class="variant-left">
                      <img src={v.image} alt={v.name} />
                      <h4>{v.name}</h4>
                    </div>

                    <button
                      class="toggle-variant"
                      data-accordion="variant"
                      aria-expanded="false"
                    >
                      <span class="arrow">▶</span>
                    </button>
                  </div>

                  <div class="variant-panel">
                    <p>{v.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    ))
  }
</section>

<style>
  .frugt-mobile {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-bottom: 4rem;
  }

  .mobile-heading {
    margin-bottom: 0.5rem;
    font-size: var(--font-size-xl);
  }

  .category-box {
    border: 2px solid var(--color-site-green);
    border-radius: 24px;
    background: white;
    padding: 1rem 1.25rem 1rem;
    position: relative;
  }

  .category-header {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 1.25rem;
  }

  .category-header-left {
    display: flex;
    align-items: flex-start;
    gap: 1.2rem;
  }

  .category-header-left img {
    width: 150px;
    height: 90px;
    object-fit: cover;
    border-radius: 22px;
    flex-shrink: 0;
  }

  .category-header-left h3 {
    margin: 0;
    font-size: var(--font-size-xl);
    font-family: "Lato", sans-serif;
    line-height: 1.1;
    padding-top: 0.35rem;
  }

  .category-box-button {
    position: absolute;
    bottom: 0;
    right: 0;
    background: var(--color-site-green);
    color: white;
    border: none;
    padding: 0.65rem 1.4rem;
    border-radius: 22px 0 20px 0;
    font-size: var(--font-size-s);
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  .category-box-button .arrow {
    display: inline-block;
    transition: transform 200ms ease;
    transform: rotate(0deg);
    margin-left: 1rem;
  }

  .category-description {
    font-size: var(--font-size-s);
    padding: 0 0.5rem;
    margin-left: 0.5rem;
    border-left: 2px solid var(--color-site-green);
  }

  .category-item.open .category-box-button .arrow {
    transform: rotate(90deg);
  }

  .category-body {
    display: none !important;
    margin-top: 0.75rem;
  }

  .category-item.open .category-body {
    display: block !important;
  }

  .variants {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-left: 1rem;
    margin-bottom: 4rem;
  }

  .variant-item {
    border: 2px solid var(--color-site-green);
    border-radius: 18px;
    background: white;
    padding: 0.6rem 0.8rem;
    display: block;
  }

  .variant-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .variant-left {
    display: flex;
    align-items: flex-start;
    gap: 0.9rem;
  }

  .variant-left img {
    width: 110px;
    height: 50px;
    border-radius: 20px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .variant-left h4 {
    margin: 0;
    font-size: var(--font-size-m);
    line-height: 1.15;
    padding-top: 6px;
  }

  .toggle-variant {
    background: none;
    border: none;
    font-size: 1.25rem;
    color: var(--color-site-green);
    cursor: pointer;
  }

  .toggle-variant .arrow {
    display: inline-block;
    transition: transform 200ms ease;
    transform: rotate(0deg);
    padding: 0.75rem;
  }

  .variant-item.open .toggle-variant .arrow {
    transform: rotate(90deg);
  }

  .variant-panel {
    max-height: 0;
    overflow: hidden;
    transition:
      max-height 0.28s ease,
      padding 0.18s ease;
    padding: 0 0.25rem;
    font-size: var(--font-size-s);
  }

  .variant-item.open .variant-panel {
    padding-top: 0.6rem;
    padding-bottom: 0.6rem;
  }

  .variant-item + .variant-item {
    margin-top: 0.5rem;
  }
</style>

<script type="module">
  document.addEventListener("click", (e) => {
    const btn = e.target.closest("[data-accordion]");
    if (!btn) return;

    const type = btn.dataset.accordion;

    function openPanel(panel) {
      panel.style.maxHeight = panel.scrollHeight + "px";
    }

    function closePanel(panel) {
      panel.style.maxHeight = "0px";
    }

    if (type === "category") {
      const cat = btn.closest(".category-item");
      const body = cat.querySelector(".category-body");
      const isOpen = cat.classList.contains("open");

      if (isOpen) {
        cat.querySelectorAll(".variant-item.open").forEach((v) => {
          v.classList.remove("open");
          closePanel(v.querySelector(".variant-panel"));
        });
        cat.classList.remove("open");
      } else {
        cat.classList.add("open");
      }
    }

    if (type === "variant") {
      const variant = btn.closest(".variant-item");
      const panel = variant.querySelector(".variant-panel");
      const isOpen = variant.classList.contains("open");

      if (isOpen) {
        variant.classList.remove("open");
        closePanel(panel);
      } else {
        variant.classList.add("open");
        openPanel(panel);
      }
    }
  });
</script>
